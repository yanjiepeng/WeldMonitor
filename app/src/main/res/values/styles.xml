<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="headerStyle">

        <item name="android:layout_marginTop">@dimen/DIMEN_5PX</item>
        <item name="android:layout_marginBottom">@dimen/DIMEN_5PX</item>
        <item name="android:textSize">@dimen/DIMEN_14PX</item>
        <item name="android:textColor">@color/header_color</item>
    </style>

</resources>
