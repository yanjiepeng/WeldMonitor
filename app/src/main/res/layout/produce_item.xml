<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_40PX"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_produceID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Widget.AppCompat.ListView" />

    <TextView
        android:id="@+id/tv_produceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Widget.AppCompat.ListView" />

    <TextView
        android:id="@+id/tv_produceStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Widget.AppCompat.ListView" />

    <TextView
        android:id="@+id/tv_produceTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@style/Widget.AppCompat.ListView" />
</LinearLayout>